<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_edit_style_1"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/form_field_start_margin"
    android:paddingRight="@dimen/form_field_start_margin" >

    <TextView
        android:id="@+id/field_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#9c9c9c"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/filed_spinner_text"
        style="@style/edittext_style_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:padding="0dp"
        android:drawablePadding="@dimen/form_feild_content_interval_size"
        android:drawableRight="@drawable/form_field_end_arrow"
        android:gravity="right|center_vertical"
        android:minHeight="@dimen/form_item_min_height"
        android:paddingLeft="2dp"
        android:singleLine="true" />

</LinearLayout>